                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text="Category : "
                            android:textSize="@dimen/_14sdp" />

                        <TextView
